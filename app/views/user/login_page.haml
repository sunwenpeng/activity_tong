%header(style="margin-left:20px;margin-top:20px;width:1250px" )
  %h1(style="margin-top:-10%" )
    活动通
%div(style="margin-top:150px" )
  %div(class="hero-unit" style="width:500px;margin-left:auto;margin-right:auto;" )
    %div(style="margin-bottom:3%;font-weight:bold" )
      %div(style="float:left" )
        用户登录
      %div(id="notice" style="padding-left:150px;color:red;height:30px;padding-top:6px" )
        - if flash[:notice]
          =flash[:notice]
    %div(style="font-color:white;text-align:right;margin-bottom:1%" )
      = link_to '用户注册', "show_enroll_form" ,:style => 'color:blue'
    =form_for :@user, html:{:class => 'form-horizontal'} do |f|
      %fieldset
        %div(class="form-group" style="height:40px" )
          %label(class="col-sm-2 control-label" style="font-weight:normal"  )
            用户
          %div(class="col-sm-10")
            =f.text_field :name,:class=>"form-control" ,:placeholder=>"请输入用户名"
        %div(class="form-group"style="height:40px" )
          %label(class="col-sm-2 control-label" style="font-weight:normal" )
            密码
          %div(class="col-sm-10")
            =f.password_field :password,:class=>"form-control" ,:placeholder=>"请输入密码"
        %div(style="color:blue;text-align:right;margin-top:2%" )
          = link_to '忘记密码' ,"modify_password_login_page", :style => 'color:blue'
        - if flash[:notice0]
          %div(style="color:red;background:pink;text-align:center;height:30px;padding-top:6px" )
            =flash[:notice0]
        %button(type="submit" class="btn btn-primary btn-lg btn-block action" style="width:50%;margin-left:25%;margin-top:10px" )
          登录