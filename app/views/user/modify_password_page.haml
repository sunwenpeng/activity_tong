%h1(style="font-size:30px;text-align:center;width:200px")
  活动通
%div(class="hero-unit" style="width:500px;margin-left:auto;margin-right:auto" )
  %div(style="margin-bottom:3%;font-weight:bold" )
    %div(style="float:left" )
      重置密码
  %div(style="color:blue;text-align:right;margin-bottom:1%" )
    = link_to '用户登录', "login_page"
  =form_for :@user, html:{:class => 'form-horizontal'} do |f|
    %fieldset
      %div(class="form-group" style="height:40px" )
        %label(class="col-sm-2 control-label" style="font-weight:normal;width:140px"  )
          请设置密码
        %div(class="col-sm-10" style="width:300px" )
          =f.password_field :password_init,:class=>"form-control",:placeholder=>"请输入密码"
      %div(class="form-group" style="height:40px" )
        %label(class="col-sm-2 control-label" style="font-weight:normal;width:140px"  )
          请确认密码
        %div(class="col-sm-10" style="width:300px")
          =f.password_field :password,:class=>"form-control",:placeholder=>"请确认密码"
      - if flash[:modify_password_notice]
        %div(style="color:red;background:pink;text-align:center;height:30px;padding-top:6px" )
          =flash[:modify_password_notice]
      %button(type="submit" class="btn btn-primary btn-lg btn-block action" style="width:50%;margin-left:25%;margin-top:10px" )
        确认修改