%header(style="margin-left:20px;margin-top:20px" )
  %h1(style="width:1150px" )
    活动通
  %div(style="line-height:38px;width:100px;margin-left:1200px;")
    ='你好,' + @current_user+'!'
    = link_to '退出','logout', :style => 'color:blue'
%div(style="margin-left:10%;margin-top:50px;width:80%;background-color:#dddddd;height:40px" )
  %div(style="margin-left:10px;float:left;margin-top:12px;font-size:18px")
    %span(style="font-color:red" )
      =link_to '首页',user_index_path(:id =>User.find(session[:current_user_id]).name),:style => 'color:blue'
    %span
      #{"/修改用户密码"}
%div(class="hero-unit" style="width:500px;margin-left:auto;margin-right:auto;margin-top:60px" )
  =form_for :@user, html:{:class => 'form-horizontal'} do |f|
    %fieldset
      %div(class="form-group" style="height:40px" )
        %label(class="col-sm-2 control-label" style="font-weight:normal;width:140px"  )
          请设置新密码
        %div(class="col-sm-10" style="width:300px" )
          =f.password_field :password,:class=>"form-control",:placeholder=>"请输入密码"
      %div(class="form-group" style="height:40px" )
        %label(class="col-sm-2 control-label" style="font-weight:normal;width:140px"  )
          请确认密码
        %div(class="col-sm-10" style="width:300px")
          =f.password_field :password_confirmation,:class=>"form-control",:placeholder=>"请确认密码"
      - if @admin_modify_password_error == 1
        %div(style="color:red;background:pink;text-align:center;height:30px;padding-top:6px" )
          ="密码不能为空"
      - if @admin_modify_password_error == 2
        %div(style="color:red;background:pink;text-align:center;height:30px;padding-top:6px" )
          ="两次密码输入的不一致，请重新输入!"
      %button(type="submit" class="btn btn-primary btn-lg btn-block action" style="width:50%;margin-left:25%;margin-top:10px" )
        确认修改