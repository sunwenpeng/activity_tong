%div
  %header(style="margin-left:20px;margin-top:20px;width:1250px" )
    %h1(style="margin-top:-10%" )
      活动通
%div(class="hero-unit" style="margin-top:150px;width:500px;margin-left:auto;margin-right:auto" )
  %div(style="margin-bottom:3%;font-weight:bold" )
    %div(style="float:left" )
      重置密码
  %div(style="color:blue;text-align:right;margin-bottom:1%" )
    = link_to '用户登录',:controller => 'user',:action=> "login_page" ,:style => 'color:blue'
  =form_for :@user, html:{:class => 'form-horizontal'} do |f|
    %fieldset
      %div(class="form-group" style="height:40px" )
        %label(class="col-sm-2 control-label" style="font-weight:normal"  )
          帐号
        %div(class="col-sm-10")
          =f.text_field :name,:class=>"form-control",:placeholder=>"请输入帐号"
      - if @modify_login_error == 1
        %div(style="color:red;background:pink;text-align:center;height:30px;padding-top:6px" )
          = "账户名不能为空!"
      - if @modify_login_error == 2
        %div(style="color:red;background:pink;text-align:center;height:30px;padding-top:6px" )
          = '账户不存在！'
      %button(type="submit" class="btn btn-primary btn-lg btn-block action" style="width:50%;margin-left:25%;margin-top:10px" )
        下一步