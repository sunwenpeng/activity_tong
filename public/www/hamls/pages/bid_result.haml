%header( style="font-size:20pt;height:60px;line-height:60px;" )
  {{bid_sign_up_name_and_number}}
  %div(class="header-left")
    %a(class="btn btn-primary"  ng-tap="return_to_bid_list_page()")
      返回
  %div(class="header-right")
    %a(class="btn btn-primary" ng-tap="go_to_bid_analysis_page()")
      统计
%div(id="wrapper" class="scrollable")
  %ul(class="survey-list")
    %li(ng-repeat="BidSignUpPeople in BidSignUpPeoples | orderBy:'price'" style="margin:1px;padding-left:10px;height:60px;line-height:60px;")
      %div(style="height:60px;line-height:60px;font-size:15px;float:left;width:100px;" )
        {{$index+1}}
      %div(style="height:60px;line-height:60px;font-size:15px;float:left;width:100px;" )
        %div(style="text-align:center;height:30px;line-height:30px;font-size:15px;width:100px;" )
          {{BidSignUpPeople.name}}
        %div(style="text-align:center;height:30px;line-height:30px;font-size:15px;width:100px;" )
          {{BidSignUpPeople.phone}}
      %div(style="text-align:right;font-size:18px;height:60px;line-height:60px;margin-right:10px;" )
        {{BidSignUpPeople.price}}元
%footer(style="height:60px;line-height:60px;font-size:20px;" )
  %div(style='text-align:center;color:red')
    {{bid_success_person_info}}

  -#%div(style="text-align：center;height:60px;line-height:60px;font-size:20px;font-color:yellow;")

%div(ng-switch="bid_result_pop_out")
  %div(ng-switch-when="true" id="bid_result_pop_out" class="modal hide fade in"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false" style="margin-left:-35%;width:70%;display:block;" )
    %div(class="modal-header" style="font-size:20px" )
      竞价结果
      %button(ng-tap="shut_down_the_result_pop_out()" style="background:white;float:right;line-height:24px;padding-top:0.5px;height:24px;" class="btn btn-primary" data-dismiss="modal" aria-hidden="true")
        %span(style="color:black;")
          关闭
    %div(class="modal-body" style="text-align:center;" ng-model = "result")
      %div(style="float:left;font-size:24px;" )
        %div( )
          {{result.name}}
      %div(style="font-size:20px;"  )
        %div()
          {{result.price}}元
        %div( style="padding-top:15px;" )
          {{result.phone}}
      %h3(id="")
        竞价成功！
  %div(ng-switch-when="false" id="bid_result_pop_out" class="modal hide fade in"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false" style="margin-left:-35%;width:70%;display:block;" )
    %div(class="modal-header" style="font-size:20px" )
      竞价结果
      %button(ng-tap="shut_down_the_result_pop_out()" style="background:white;float:right;line-height:24px;padding-top:0.5px;height:24px;" class="btn btn-primary" data-dismiss="modal" aria-hidden="true")
        %span(style="color:black;")
          关闭
    %div(class="modal-body" style="text-align:center;")
      %h3(id="")
        竞价失败！
  -#%div(id="pop_out_background" class="modal-backdrop fade in" )
